<resources>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidth" parent="Wrap">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchHeight" parent="Wrap">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CirclePageIndicator">
        <item name="centered">true</item>
        <item name="fillColor">@color/black</item>
        <item name="pageColor">@color/white</item>
        <item name="radius">3.5dp</item>
        <item name="snap">true</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>